@model IEnumerable<Pi.Univesp.Models.Nota>

@{
    ViewData["Title"] = "Notas";
}

<h1>Notas</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValorNota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValorNota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NotaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.NotaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.NotaId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
