@model IEnumerable<Pi.Univesp.Models.Aluno>

@{
    ViewData["Title"] = "Aluno";
}

<h1>Alunos</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RA)
            </td>
            <td>
                <a asp-action="Stats" asp-route-id="@item.AlunoId">Estatísticas</a> |
                <a asp-action="Edit" asp-route-id="@item.AlunoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AlunoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AlunoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
